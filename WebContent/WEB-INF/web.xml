<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <context-param>
  	<param-name>red</param-name>
  	<param-value>Bulbasaur</param-value>
  </context-param>
  <context-param>
  	<param-name>green</param-name>
  	<param-value>Charmander</param-value>
  </context-param>
  <context-param>
  	<param-name>song</param-name>
  	<param-value>Our childhood</param-value>
  </context-param>
  
  <!-- Starting of Servlets -->
  <servlet>
    <servlet-name>Hello World</servlet-name>
    <servlet-class>edu.jsp.servlets.HelloWorld</servlet-class>
    <init-param>
    	<param-name>song</param-name>
    	<param-value>A thousand years</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Hello World</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Authentication</servlet-name>
    <servlet-class>edu.jsp.servlets.Authentication</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Authentication</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>
  <!-- Ending of Servlets -->
  
  <!-- Starting of JSP -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Menu</servlet-name>
    <jsp-file>/jsp/menu.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Menu</servlet-name>
    <url-pattern>/menu</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Sample</servlet-name>
    <jsp-file>/jsp/sample.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Sample</servlet-name>
    <url-pattern>/sample</url-pattern>
  </servlet-mapping>
  <!-- Ending of JSP -->
</web-app>